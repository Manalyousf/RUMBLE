<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp">

    <!-- Rumble logo at the top -->
    <ImageView
        android:id="@+id/rumble_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rumble_logo"
        android:contentDescription="Rumble logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_text"
        android:layout_marginBottom="24dp"/>

    <!-- Sign-in text -->
    <TextView
        android:id="@+id/sign_in_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to Rumble"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/rumble_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_in_message"
        android:layout_marginBottom="16dp"/>

    <!-- Instruction text -->
    <TextView
        android:id="@+id/sign_in_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In order to unlock access to account features you need to sign in to your Rumble account."
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/sign_in_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/email_button"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="16dp"/>

    <!-- Email sign-in button -->
    <Button
        android:id="@+id/email_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Continue with email"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/sign_in_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/google_button"
        android:layout_marginBottom="16dp"/>

    <!-- Google sign-in button -->
    <Button
        android:id="@+id/google_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Continue with Google"
        android:drawableStart="@drawable/ic_google"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/email_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/facebook_button"
        android:layout_marginBottom="16dp"/>

    <!-- Facebook sign-in button -->
    <Button
        android:id="@+id/facebook_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Continue with Facebook"
        android:drawableStart="@drawable/ic_facebook"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/google_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
